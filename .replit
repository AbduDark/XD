modules = ["php-8.2", "web", "nodejs-20"]
run = "npm run dev"

[nix]
channel = "stable-25_05"
packages = ["openssh_gssapi"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Run Laravel Server"
author = 46913891
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan serve --host=0.0.0.0 --port=5000"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Server"

[[workflows.workflow]]
name = "Laravel Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/$(basename \"$PWD\") && php artisan serve --host=0.0.0.0 --port=5000"
